<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_brown_grad"
    android:orientation="vertical"
    tools:context="com.kapture.mystreezofafrica.fragments.TourDetailsFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageViewdetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/kariba" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_brown_grad"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Gallery"
            android:textColor="#9effffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Program"
            android:textColor="#9effffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Map"
            android:textColor="#9effffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Transport"
            android:textColor="#9effffff"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        tools:listitem="@layout/layout_tour_option" />

</LinearLayout>
